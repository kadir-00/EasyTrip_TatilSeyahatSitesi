@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">

<head>
    <title>Giriş Yap - EasyTrip Admin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
            font-family: 'Poppins', sans-serif;
        }

        body {
            /* High-res abstract travel background */
            background-image: url('https://images.unsplash.com/photo-1476514525535-07fb3b4ae5f1?q=80&w=2070&auto=format&fit=crop');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
        }

        /* Overlay for better readability over the image */
        body::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.5);
            /* Darker overlay for better contrast */
            z-index: 0;
        }

        .login-card {
            background: rgba(255, 255, 255, 0.9);
            /* More transparency */
            backdrop-filter: blur(10px);
            /* Real glassmorphism effect */
            -webkit-backdrop-filter: blur(10px);
            width: 100%;
            max-width: 420px;
            padding: 45px;
            border-radius: 16px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
            position: relative;
            z-index: 1;
            margin: 20px;
            text-align: center;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .login-header {
            margin-bottom: 30px;
        }

        .login-header h2 {
            color: #333;
            font-size: 28px;
            font-weight: 600;
            margin-bottom: 10px;
        }

        .login-header p {
            color: #666;
            font-size: 14px;
        }

        .form-group {
            position: relative;
            margin-bottom: 20px;
            text-align: left;
        }

        .form-group label {
            display: block;
            margin-bottom: 8px;
            color: #555;
            font-weight: 500;
            font-size: 14px;
        }

        .form-group input {
            width: 100%;
            padding: 12px 15px 12px 40px;
            /* Left padding for icon */
            border: 2px solid #e1e1e1;
            border-radius: 8px;
            font-size: 14px;
            transition: all 0.3s ease;
            outline: none;
            background-color: #f9f9f9;
        }

        .form-group i {
            position: absolute;
            left: 15px;
            top: 40px;
            /* Adjust based on label height */
            color: #aaa;
            transition: color 0.3s ease;
        }

        .form-group input:focus {
            border-color: #4b6cb7;
            background-color: #fff;
            box-shadow: 0 0 0 4px rgba(75, 108, 183, 0.1);
        }

        .form-group input:focus+i {
            color: #4b6cb7;
        }

        .btn-login {
            width: 100%;
            padding: 14px;
            background: linear-gradient(to right, #4b6cb7, #182848);
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: transform 0.2s, box-shadow 0.2s;
            margin-top: 10px;
        }

        .btn-login:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(75, 108, 183, 0.4);
        }

        .btn-login:active {
            transform: translateY(0);
        }

        .forgot-password {
            margin-top: 20px;
            font-size: 13px;
        }

        .forgot-password a {
            color: #666;
            text-decoration: none;
            transition: color 0.3s;
        }

        .forgot-password a:hover {
            color: #4b6cb7;
        }

        .footer-copy {
            margin-top: 30px;
            font-size: 12px;
            color: #888;
        }

        /* Responsive Design */
        @@media (max-width: 480px) {
            .login-card {
                padding: 30px 20px;
            }
        }
    </style>
</head>

<body>
    <div class="login-card">
        <div class="login-header">
            <h2>Giriş Yap</h2>
            <p>Admin paneline erişmek için giriş yapın</p>
        </div>

        @using (Html.BeginForm("Login", "GirisYap", FormMethod.Post))
        {
            <div class="form-group">
                <label for="Kullanici">Kullanıcı Adı</label>
                <input type="text" id="Kullanici" name="Kullanici" placeholder="Kullanıcı adınızı girin" required>
                <i class="fas fa-user"></i>
            </div>

            <div class="form-group">
                <label for="Sifre">Şifre</label>
                <input type="password" id="Sifre" name="Sifre" placeholder="Şifrenizi girin" required>
                <i class="fas fa-lock"></i>
            </div>

            <button type="submit" class="btn-login">Giriş Yap</button>

            <div class="forgot-password">
                <a href="#">Şifremi Unuttum?</a>
            </div>
        }

        <div class="footer-copy">
            <p>&copy; @DateTime.Now.Year EasyTrip. Tüm hakları saklıdır.</p>
        </div>
    </div>
</body>

</html>