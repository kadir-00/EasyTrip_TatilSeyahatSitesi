@model EasyTrip_TatilSeyahatSitesi.Models.Siniflar.Blog
@{
    ViewBag.Title = "YeniBlog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="header-panel"
    style="background: linear-gradient(to right, #4b6cb7, #182848); color: white; padding: 15px; border-radius: 5px; margin-bottom: 20px;">
    <h2 style="margin:0;"><i class="fas fa-plus-circle"></i> Yeni Blog Ekleme</h2>
</div>

<div class="w3-card w3-white w3-round w3-padding-large">
    <form class="form-group" method="post">

        <div class="form-group">
            @Html.LabelFor(x => x.Baslik, new { @style = "font-weight:bold; color:#333;" })
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fas fa-heading"></i></span>
                </div>
                @Html.TextBoxFor(x => x.Baslik, new { @class = "form-control", @placeholder = "Blog Basligi" })
            </div>
        </div>
        <br />

        <div class="form-group">
            @Html.LabelFor(x => x.Tarih, new { @style = "font-weight:bold; color:#333;" })
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                </div>
                @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control", @type = "date" })
            </div>
        </div>
        <br />

        <div class="form-group">
            @Html.LabelFor(x => x.BlogImage, new { @style = "font-weight:bold; color:#333;" })
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fas fa-image"></i></span>
                </div>
                @Html.TextBoxFor(x => x.BlogImage, new { @class = "form-control", @placeholder = "Resim URL" })
            </div>
        </div>
        <br />

        <div class="form-group">
            @Html.LabelFor(x => x.Aciklama, new { @style = "font-weight:bold; color:#333;" })
            @Html.TextAreaFor(x => x.Aciklama, 10, 1, new { @class = "form-control", @placeholder = "Blog Icerigi" })
        </div>
        <br />

        <button class="btn btn-primary"><i class="fas fa-save"></i> Blog Ekle</button>
        <a href="/Admin/Index/" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Vazgec</a>
    </form>
</div>
