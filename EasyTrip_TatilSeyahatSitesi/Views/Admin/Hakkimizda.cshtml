@using EasyTrip_TatilSeyahatSitesi.Models.Siniflar
@model List<Hakkimizda>
@{
    ViewBag.Title = "Hakkimizda";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="header-panel"
    style="background: linear-gradient(to right, #4b6cb7, #182848); color: white; padding: 15px; border-radius: 5px; margin-bottom: 20px;">
    <h2 style="margin:0;"><i class="fas fa-info-circle"></i> Hakkimizda Yazilari</h2>
</div>

<div class="w3-card w3-white w3-round w3-padding-large">
    <table class="table table-bordered table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th style="width: 5%;">ID</th>
                <th style="width: 20%;">Fotograf URL</th>
                <th style="width: 55%;">Aciklama (Kisaltilmis)</th>
                <th style="width: 10%;">Sil</th>
                <th style="width: 10%;">Guncelle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
                <tr>
                    <td>@x.ID</td>
                    <td>@(x.FotoUrl != null && x.FotoUrl.Length > 30 ? x.FotoUrl.Substring(0, 30) + "..." : x.FotoUrl)</td>
                    <td>@(x.Aciklama != null && x.Aciklama.Length > 50 ? x.Aciklama.Substring(0, 50) + "..." : x.Aciklama)
                    </td>
                    <td><a href="/Admin/HakkimizdaSil/@x.ID" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i>
                            Sil</a></td>
                    <td><a href="/Admin/HakkimizdaGetir/@x.ID" class="btn btn-success btn-sm"><i class="fas fa-edit"></i>
                            Guncelle</a></td>
                </tr>
            }
        </tbody>
    </table>
    <br />
    <a href="/Admin/YeniHakkimizda/" class="btn btn-primary"><i class="fas fa-plus"></i> Yeni Hakkimizda Yazisi Ekle</a>
</div>
