@model EasyTrip_TatilSeyahatSitesi.Models.Siniflar.Hakkimizda
@{
    ViewBag.Title = "YeniHakkimizda";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="header-panel" style="background: linear-gradient(to right, #4b6cb7, #182848); color: white; padding: 15px; border-radius: 5px; margin-bottom: 20px;">
    <h2 style="margin:0;"><i class="fas fa-plus-circle"></i> Yeni Hakk&#305;m&#305;zda Yaz&#305;s&#305; Ekle</h2>
</div>

<div class="w3-card w3-white w3-round w3-padding-large">
    <form class="form-group" method="post">
        
        <div class="form-group">
            @Html.LabelFor(x => x.FotoUrl, new { @style = "font-weight:bold; color:#333;" })
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fas fa-image"></i></span>
                </div>
                <input type="text" class="form-control" name="FotoUrl" placeholder="Foto&#287;raf Linkini Giriniz (&#214;rn: https://...)" />
            </div>
        </div>
        <br />
        
        <div class="form-group">
            @Html.LabelFor(x => x.Aciklama, new { @style = "font-weight:bold; color:#333;" })
            @Html.TextAreaFor(x => x.Aciklama, 10, 1, new { @class = "form-control", @placeholder = "A&#231;&#305;klama Giriniz..." })
        </div>
        <br />

        <button class="btn btn-primary"><i class="fas fa-save"></i> Kaydet</button>
        <a href="/Admin/Hakkimizda/" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Vazge&#231;</a>
    </form>
</div>
